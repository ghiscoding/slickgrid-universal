{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es5",
      "dom"
    ],
    "types": [
      "jest",
      "node",
      "cypress-real-events"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}