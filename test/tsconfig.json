{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2021", "dom"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["../node_modules/@types"]
  },
  "include": ["**/*.ts"]
}
