{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2018",
    "lib": [
      "es2020",
      "dom"
    ],
    "types": [
      "jest",
      "jest-extended",
      "jquery",
      "moment",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
    ],
    "pretty": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "stripInternal": true,
    "strict": false
  }
}