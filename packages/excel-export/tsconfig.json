{
  "extends": "../../tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["src/types", "./node_modules/@types", "../../node_modules/@types"]
  },
  "exclude": ["dist", "node_modules", "**/*.spec.ts"],
  "filesGlob": ["./src/**/*.ts"],
  "include": ["src/**/*.ts", "types/**/*.ts"],
  "references": [
    {
      "path": "../common"
    },
    {
      "path": "../utils"
    }
  ]
}
