{
  "extends": "../tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "declarationDir": "dist/esm",
    "outDir": "dist/esm",
    "typeRoots": [
      "typings"
    ],
    "paths": {
      "jszip": [
        "node_modules/jszip/dist/jszip.min.js"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "include": [
    "src/**/*.ts",
    "typings/**/*.ts"
  ]
}