{
  "extends": "../../tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "declarationDir": "dist/types",
    "outDir": "dist/esm",
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "references": [
    {
      "path": "../common"
    },
    {
      "path": "../utils"
    }
  ]
}