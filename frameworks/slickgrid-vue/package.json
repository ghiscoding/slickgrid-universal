    "@slickgrid-universal/utils": "workspace:*",
    "dequal": "catalog:",
    "sortablejs": "catalog:"
  },
  "peerDependencies": {
    "vue": ">=3.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "catalog:",
