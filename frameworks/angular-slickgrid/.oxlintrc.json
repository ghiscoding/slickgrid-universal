{
  "$schema": "../../node_modules/oxlint/configuration_schema.json",
  "extends": ["../../.oxlintrc.json"],
  "plugins": ["oxc", "regex", "typescript"],
  "jsPlugins": ["@angular-eslint/eslint-plugin"],
  "ignorePatterns": [
    "**/*.spec.ts",
    "**/*.cy.ts",
    ".angular/*",
    "dist/",
    "coverage/",
    "test/",
    "**/environment.*.ts",
    "**/grid-remote.component.ts",
    "**/public_api.ts"
  ],
  "overrides": [
    {
      "files": ["**/*.ts"],
      "rules": {
        // disable type imports since that conflicts with DI:
        //   import type { TranslateService } from '@ngx-translate/core';
        //   constructor(private translate: TranslateService) {}
        "typescript/consistent-type-imports": "off"
      }
    },
    {
      "files": ["**/*.html"],
      "rules": {
        // HTML-specific rules (limited in Oxlint)
        // You may need additional tooling for HTML-specific linting
      }
    }
  ],
  "rules": {
    "@angular-eslint/directive-selector": ["error", { "type": "attribute", "prefix": "app", "style": "camelCase" }],
    "@angular-eslint/component-selector": ["error", { "type": "element", "style": "kebab-case" }],
    "@angular-eslint/prefer-standalone": "off",
    // Angular-specific selector rules (manual implementation)
    "naming-convention": [
      "error",
      {
        "selector": "directive",
        "format": ["camelCase"],
        "prefix": ["app"]
      },
      {
        "selector": "component",
        "format": ["kebab-case"]
      }
    ]
  }
}
