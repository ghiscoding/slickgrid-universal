{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "typeRoots": ["../types", "../../node_modules/@types"],
    "outDir": "dist/amd",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "strict": true,
    "stripInternal": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "exclude": [".vscode", "src/examples", "src/test", "**/*.spec.ts", "**/*.scss"],
  "include": ["../types", "**/*"]
}
