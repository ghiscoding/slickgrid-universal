{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "env": {
    "es2025": true,
    "browser": true,
    "shared-node-browser": true
  },
  "jsPlugins": ["eslint-plugin-cypress"],
  "files": {
    "include": ["**/cypress/e2e/*.cy.ts"]
  },
  "ignorePatterns": ["*", "!**/cypress/e2e/*.cy.ts"],
  "rules": {
    "eslint/no-unused-expressions": "off",
    "oxc/erasing-op": "off"
  }
}
