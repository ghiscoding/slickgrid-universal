{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowJs": false,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "exclude": ["react_project", "dist", "node_modules", "**/*.spec.ts"],
  "filesGlob": ["./src/**/*.ts", "./src/**/*.tsx", "./test/**/*.ts", "./types/**/*.d.ts"],
  "include": ["src"]
}
